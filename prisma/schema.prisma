generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
  sales Sale[]
}

model Seller {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  sales Sale[]
}

model Sale {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  sellerId String
  clientId String
  seller   Seller @relation(fields: [sellerId], references: [id])
  client   Client @relation(fields: [clientId], references: [id])
}

