model Product {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  price    Float
  category String
  sellerId String 
  date     DateTime
  images   String[] @default([])
}

type OrderItem {
  productId String
  quantity  Int
}

model Order {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  clientId   String
  date       DateTime
  products   OrderItem[]
}

model Discount {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  percent     Int
  productIds  String[]    @default([])
  startDate   DateTime
  endDate     DateTime
}